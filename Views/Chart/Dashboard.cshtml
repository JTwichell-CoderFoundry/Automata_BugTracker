@using Automata_BugTracker.Models
@model IEnumerable<Ticket>

@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>


<div class="row">
    <div class="col-md-3">
        <section class="panel panel-featured-left panel-featured-primary">
            <div class="panel-body">
                <div class="widget-summary">
                    <div class="widget-summary-col widget-summary-col-icon">
                        <div class="summary-icon bg-primary">
                            <i class="fa fa-life-ring"></i>
                        </div>
                    </div>
                    <div class="widget-summary-col">
                        <div class="summary">
                            <h4 class="title">High Priority</h4>
                            <div class="info">
                                <strong class="amount">3</strong>
                                <span class="text-primary">(1 unAssigned)</span>
                            </div>
                        </div>
                        <div class="summary-footer">
                            <a class="text-muted text-uppercase">(view all)</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="col-md-3">
        <section class="panel panel-featured-left panel-featured-primary">
            <div class="panel-body">
                <div class="widget-summary">
                    <div class="widget-summary-col widget-summary-col-icon">
                        <div class="summary-icon bg-primary">
                            <i class="fa fa-life-ring"></i>
                        </div>
                    </div>
                    <div class="widget-summary-col">
                        <div class="summary">
                            <h4 class="title">Support Questions</h4>
                            <div class="info">
                                <strong class="amount">1281</strong>
                                <span class="text-primary">(14 unread)</span>
                            </div>
                        </div>
                        <div class="summary-footer">
                            <a class="text-muted text-uppercase">(view all)</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="col-md-3">
        <section class="panel panel-featured-left panel-featured-primary">
            <div class="panel-body">
                <div class="widget-summary">
                    <div class="widget-summary-col widget-summary-col-icon">
                        <div class="summary-icon bg-primary">
                            <i class="fa fa-life-ring"></i>
                        </div>
                    </div>
                    <div class="widget-summary-col">
                        <div class="summary">
                            <h4 class="title">Support Questions</h4>
                            <div class="info">
                                <strong class="amount">1281</strong>
                                <span class="text-primary">(14 unread)</span>
                            </div>
                        </div>
                        <div class="summary-footer">
                            <a class="text-muted text-uppercase">(view all)</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="col-md-3">
        <section class="panel panel-featured-left panel-featured-primary">
            <div class="panel-body">
                <div class="widget-summary">
                    <div class="widget-summary-col widget-summary-col-icon">
                        <div class="summary-icon bg-primary">
                            <i class="fa fa-life-ring"></i>
                        </div>
                    </div>
                    <div class="widget-summary-col">
                        <div class="summary">
                            <h4 class="title">Support Questions</h4>
                            <div class="info">
                                <strong class="amount">1281</strong>
                                <span class="text-primary">(14 unread)</span>
                            </div>
                        </div>
                        <div class="summary-footer">
                            <a class="text-muted text-uppercase">(view all)</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <div id="typeChart" style="height: 250px;"></div>
    </div>
    <div class="col-md-6">
        <div id="priorityChart" style="height: 250px;"></div>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AssignedToUser.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OwnerUser.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TicketPriority.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TicketStatus.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TicketType.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
               
                
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.AssignedToUserId != null)
                        {
                            @Html.DisplayFor(modelItem => item.AssignedToUser.FirstName)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OwnerUser.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TicketType.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                                     
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>


@section scripts{   

    <script>
        var url = '@Url.Action("GetTicketTypeData", "Chart")';
        $.post(url).then(function (response) {
            $('#typeChart').empty();
            new Morris.Bar({
                element: 'typeChart',
                data: response,
                xkey: 'TicketType',
                ykeys: ['Count'],
                labels: ['Count'],
                gridTextSize: 10
            });
        });

        var url = '@Url.Action("GetTicketPriorityData", "Chart")';
        $.post(url).then(function (response) {
            $('#priorityChart').empty()
            new Morris.Bar({
                element: 'priorityChart',
                data: response,
                xkey: 'Label',
                ykeys: ['Count'],
                labels: ['Count'],
                gridTextSize: 10
            });
        });
    </script>

}

